<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%msg%n"/>
        </Console>
    </Appenders>
    
    <Loggers>
        <!-- 专门针对MyBatis SQL日志的配置 -->
        <Logger name="com.personal.website.mapper" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        
        <!-- 针对MyBatis核心SQL日志 -->
        <Logger name="org.apache.ibatis.logging" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        
        <!-- 关键：将连接管理相关的日志设为较高级别，以避免输出 -->
        <Logger name="org.apache.ibatis.datasource" level="WARN" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="org.apache.ibatis.transaction" level="WARN" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        
        <!-- 根日志级别设为较高，避免其他杂项日志 -->
        <Root level="WARN">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>